<Window x:Class="Game_of_Life.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_of_Life"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000" ResizeMode="NoResize">

    <StackPanel Height="1000">
        <Menu DockPanel.Dock="Top" Grid.Row="0">
            <MenuItem Header="Option">
                <MenuItem Header="Run" x:Name="Run" Click="Run_Click"/>
                <MenuItem Header="Pause" x:Name="Pause" Click="Pause_Click"/>
            </MenuItem>
        </Menu>
            <Grid x:Name="grid" Height="944">
        
            </Grid>
    </StackPanel>
   

</Window>
